def sort_dict_by_value(input_dict, descending=False):
    sorted_dict = dict(sorted(input_dict.items(), key=lambda item: item[1], reverse=descending))
    return sorted_dict
my_dict = {'apple': 3, 'banana': 1, 'cherry': 2, 'date': 4}
ascending_sorted = sort_dict_by_value(my_dict)
print("Ascending Order:", ascending_sorted)
descending_sorted = sort_dict_by_value(my_dict, descending=True)
print("Descending Order:", descending_sorted)
